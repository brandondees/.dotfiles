[user]
	name = Brandon Dees
	useConfigOnly = true
	email = dees@pm.me
[core]
	editor = nvim
	excludesfile = /home/dees/.gitignore_global
[push]
	default = simple
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
  d = difftool
  co-pr = !sh -c 'git fetch upstream pull/$1/head:pr/$1 && git checkout pr/$1' -
  commitm = commit -m
  status = status --show-stash
  s = status --short
  ghclone = !sh -c 'git clone git@github.com:$1.git $2' -
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
